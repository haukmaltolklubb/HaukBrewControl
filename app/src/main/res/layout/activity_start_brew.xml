<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_startBrewContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F2E0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:padding="10dp"
    android:weightSum="1">

    <TextView android:text="@string/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:id="@+id/MainMenu"
        android:layout_centerHorizontal="true" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/startBrewProcessDataProgressBar"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_spinner_yellow"
            android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dateSetLabel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/setStartDato">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ikke satt"
                android:id="@+id/dateDisplay"
                android:textSize="24sp"
                android:minWidth="250dp"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/setStartDatoBtn"
                style="@style/btnStyleSandrift"
                android:background="@drawable/ic_schedule_black_24dp"
                android:onClick=""
                android:paddingLeft="10dp"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="openHeatWindow"
            android:id="@+id/startHeatLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/startHeatProcess"
                android:text="@string/heatBtn_text"
                android:textSize="24sp"
                android:minWidth="250dp"
                android:layout_marginLeft="20dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/openHeatWindow"
                android:onClick=""
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="end"
                android:width="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="openMashWindow"
            android:id="@+id/startMashLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/startMashProcess"
                android:text="@string/meshBtn_text"
                android:textSize="24sp"
                android:minWidth="250dp"
                android:layout_marginLeft="20dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/openMashWindow"
                android:onClick=""
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="end"
                android:width="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="openFermentActivity"
            android:id="@+id/startFermentLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/startFermentProcess"
                android:text="@string/fermentBtn_text"
                android:textSize="24sp"
                android:minWidth="250dp"
                android:layout_marginLeft="20dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fermentingBtn"
                android:onClick="openFermentActivity"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="end"
                android:width="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="openPumpWindow"
            android:id="@+id/startPumpLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/startPumpProcess"
                android:text="@string/pumpBtn_text"
                android:textSize="24sp"
                android:minWidth="250dp"
                android:layout_marginLeft="20dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pumpBtn"
                android:onClick="openPumpWindow"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="end"
                android:width="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
