<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/beer_wallpaper"
    android:orientation="vertical"
    android:gravity="top|center"
    android:padding="10dp"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mash_heading"
        android:id="@+id/heatHeading"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="90dp"
            android:text="@string/mash_temp_heading"
            android:id="@+id/MashTempHeading"
            android:textSize="24sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="@string/mash_time_heading"
            android:id="@+id/MashTimeHeading"
            android:textSize="24sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_step1_descr"
            android:id="@+id/heatTempLabel"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/heatTemp"
            android:paddingLeft="0dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Mash1Time"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_step2_descr"
            android:id="@+id/Mash2Descr"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/Mash2Temp"
            android:layout_alignLeft="@+id/heatTempLabel"
            android:layout_alignStart="@+id/heatTempLabel" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Mash2Temp"
            android:layout_below="@+id/heatTemp"
            android:layout_alignLeft="@+id/heatTemp"
            android:layout_alignStart="@+id/heatTemp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Mash2Time"
            android:layout_below="@+id/Mash1Time"
            android:layout_alignLeft="@+id/Mash1Time"
            android:layout_alignStart="@+id/Mash1Time"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_step3_descr"
            android:id="@+id/Mash3Descr"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/Mash2Descr"
            android:layout_alignLeft="@+id/Mash2Descr"
            android:layout_alignStart="@+id/Mash2Descr"
            android:layout_marginTop="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Mash3Temp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_alignBottom="@+id/Mash3Descr"
            android:layout_alignLeft="@+id/Mash2Temp"
            android:layout_alignStart="@+id/Mash2Temp"
            android:layout_alignRight="@+id/Mash2Temp"
            android:layout_alignEnd="@+id/Mash2Temp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Mash3Time"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_alignTop="@+id/Mash3Temp"
            android:layout_alignLeft="@+id/Mash2Time"
            android:layout_alignStart="@+id/Mash2Time" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_startbutton_text"
            android:id="@+id/MashStartButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            android:textSize="24sp"
            android:background="@drawable/sandrift_button"
            style="@style/btnStyleSandrift"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_stopbutton_text"
            android:id="@+id/MashStopButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="69dp"
            android:layout_marginEnd="69dp"
            android:textSize="24sp"
            android:background="@drawable/sandrift_button"
            style="@style/btnStyleSandrift"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_toptemp_head_text"
            android:id="@+id/MashTempTopHeading"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_alignTop="@+id/MashBottomTempHeading"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_bottomtemp_head_text"
            android:id="@+id/MashTempBottomHeading"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:paddingTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/MashChkTempBottom"
            android:layout_alignStart="@+id/MashChkTempBottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_chk_button_text"
            android:id="@+id/MashChkTemp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:longClickable="false"
            android:layout_marginTop="40dp"
            android:textSize="24sp"
            android:background="@drawable/sandrift_button"
            style="@style/btnStyleSandrift"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/MashChkTempTop"
            android:layout_alignBottom="@+id/MashChkTemp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/MashChkTempBottom"
            android:layout_alignTop="@+id/MashChkTempTop"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mash_time_descr"
            android:id="@+id/MashChkTimeDescr"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:paddingTop="10dp"
            android:layout_below="@+id/MashChkTemp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/MashChkTime"
            android:layout_alignBottom="@+id/MashChkTimeDescr"
            android:layout_alignLeft="@+id/MashChkTempTop"
            android:layout_alignStart="@+id/MashChkTempTop"
            android:textColor="@android:color/black" />

    </RelativeLayout>Layout>

</LinearLayout>
