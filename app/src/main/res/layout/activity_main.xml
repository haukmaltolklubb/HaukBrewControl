<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/beer4">

    <TextView android:text="@string/heading" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:id="@+id/MainMenu"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:layout_alignLeft="@+id/startNewBrewBtn"
        android:layout_alignStart="@+id/startNewBrewBtn"
        android:layout_alignRight="@+id/startNewBrewBtn"
        android:layout_alignEnd="@+id/startNewBrewBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start nytt brygg"
        android:id="@+id/startNewBrewBtn"
        android:onClick="openStartBrewActivity"
        android:background="@drawable/sandrift_button"
        style="@style/btnStyleSandriftLarge"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/getStatusBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hent status"
        android:id="@+id/getStatusBtn"
        android:onClick="openStatusActivity"
        android:background="@drawable/sandrift_button"
        style="@style/btnStyleSandriftLarge"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
