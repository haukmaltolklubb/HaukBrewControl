<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="no.gravem.hauk.haukbrewcontrol.BrewStatus"
    android:background="@drawable/beer4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/brew_status"
            android:id="@+id/brew_status"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="243dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/gridLayout"
                android:layout_below="@+id/brew_status"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="24sp"
                    android:text="@string/tempsLabel"
                    android:id="@+id/temperaturesLabel"
                    android:layout_below="@+id/brew_status"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/temp1Label"
                    android:id="@+id/temp1Label"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="3"
                    android:id="@+id/temp1"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textSize="24sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/temp2Label"
                    android:id="@+id/temp2Label"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="3"
                    android:id="@+id/temp2"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textSize="24sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/temp3Label"
                    android:id="@+id/temp3Label"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="3"
                    android:id="@+id/temp3"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:textSize="24sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/temp4Label"
                    android:id="@+id/temp4Label"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="3"
                    android:id="@+id/temp4"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:textSize="24sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/brewStatusCurrentProcess"
                    android:id="@+id/currentProcessLabel"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/currentProcess"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:ems="3"
                    android:textSize="24sp"
                    android:layout_marginLeft="20dp" />

            </GridLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/refreshBtn"
                android:src="@android:drawable/stat_notify_sync"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:onClick="getCurrentProsessData"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/gridLayout"
                android:layout_alignEnd="@+id/gridLayout"
                android:layout_marginBottom="59dp" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
