<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="no.gravem.hauk.haukbrewcontrol.Ferment"
    android:background="@drawable/yellow_gradientsquare">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GjÃ¦ring"
            android:id="@+id/fermentHeading"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set temp:"
                android:id="@+id/fermentTempLabel"
                android:longClickable="true"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:ems="3"
                android:id="@+id/fermentTemp"
                android:textSize="24sp"
                android:numeric="decimal"
                android:onClick="setFermentTemperature" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/degreesCelciusLabel"
                android:id="@+id/degreesCelciusLabel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startButton_text"
                android:id="@+id/fermentStartBtn"
                android:textSize="24sp"
                android:background="@drawable/sandrift_button"
                android:paddingTop="10dp"
                style="@style/btnStyleSandrift"
                android:onClick="startFermentProcess"
                android:layout_marginRight="46dp"
                android:layout_marginEnd="46dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stopButton_text"
                android:id="@+id/fermentStopBtn"
                android:textSize="24sp"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:onClick="stopFermentProcess"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Koketid"
                    android:id="@+id/currentFermentTimeLabel"
                    android:textSize="24sp"
                    android:phoneNumber="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/currentFermentTime"
                    android:text="&lt;tid>" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:id="@+id/currentFermentTempLabel"
                    android:textSize="24sp"
                    android:text="@string/currentTempLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/currentFermentTemp"
                    android:text="&lt;temp>" />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/updateButton"
                android:src="@android:drawable/stat_notify_sync"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:layout_marginTop="38dp"
                android:onClick="getCurrentProsessData"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
