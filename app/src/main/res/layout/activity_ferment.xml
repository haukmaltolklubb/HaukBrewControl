<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="no.gravem.hauk.haukbrewcontrol.Ferment"
    android:background="@drawable/beer_wallpaper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GjÃ¦ring"
        android:id="@+id/fermentHeading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set temp:"
        android:id="@+id/fermentTempLabel"
        android:layout_marginTop="80dp"
        android:longClickable="true"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/fermentHeading"
        android:layout_toLeftOf="@+id/fermentTemp"
        android:layout_toStartOf="@+id/fermentTemp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:ems="3"
        android:id="@+id/fermentTemp"
        android:textSize="24sp"
        android:numeric="decimal"
        android:onClick="setFermentTemperature"
        android:layout_alignTop="@+id/fermentTempLabel"
        android:layout_alignRight="@+id/fermentHeading"
        android:layout_alignEnd="@+id/fermentHeading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/degreesCelciusLabel"
        android:id="@+id/degreesCelciusLabel"
        android:layout_alignTop="@+id/fermentTemp"
        android:layout_toRightOf="@+id/fermentTemp"
        android:layout_toEndOf="@+id/fermentTemp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startButton_text"
        android:id="@+id/fermentStartBtn"
        android:textSize="24sp"
        android:background="@drawable/sandrift_button"
        style="@style/btnStyleSandrift"
        android:onClick="startFermentProcess"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/fermentTempLabel"
        android:layout_alignStart="@+id/fermentTempLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stopButton_text"
        android:id="@+id/fermentStopBtn"
        android:textSize="24sp"
        android:background="@drawable/sandrift_button"
        style="@style/btnStyleSandrift"
        android:onClick="stopFermentProcess"
        android:layout_above="@+id/progressData"
        android:layout_alignRight="@+id/currentFermentTemp"
        android:layout_alignEnd="@+id/currentFermentTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prosessdata"
        android:id="@+id/progressData"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/fermentStartBtn"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koketid"
        android:id="@+id/currentFermentTimeLabel"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:phoneNumber="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/progressData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/currentFermentTime"
        android:text="&lt;tid>"
        android:layout_alignBottom="@+id/currentFermentTimeLabel"
        android:layout_alignRight="@+id/updateButton"
        android:layout_alignEnd="@+id/updateButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/currentFermentTempLabel"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:text="@string/currentTempLabel"
        android:layout_below="@+id/currentFermentTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/fermentTemp"
        android:layout_toStartOf="@+id/fermentTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/currentFermentTemp"
        android:layout_alignTop="@+id/currentFermentTempLabel"
        android:layout_alignRight="@+id/updateButton"
        android:layout_alignEnd="@+id/updateButton"
        android:text="&lt;temp>" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateButton"
        android:src="@android:drawable/stat_notify_sync"
        android:background="@drawable/sandrift_button"
        style="@style/btnStyleSandrift"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/currentFermentTime"
        android:onClick="getCurrentProsessData"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp" />



</RelativeLayout>
