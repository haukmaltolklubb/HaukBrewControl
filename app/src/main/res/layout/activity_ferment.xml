<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="no.gravem.hauk.haukbrewcontrol.Ferment"
    android:background="@drawable/yellow_gradientsquare">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GjÃ¦ring"
            android:id="@+id/fermentHeading"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set temp:"
                android:id="@+id/fermentTempLabel"
                android:longClickable="true"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:ems="3"
                android:id="@+id/fermentTemp"
                android:textSize="24sp"
                android:numeric="decimal"
                android:onClick="setFermentTemperature" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/degreesCelciusLabel"
                android:id="@+id/degreesCelciusLabel" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="1"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startButton_text"
                android:id="@+id/fermentStartBtn"
                android:textSize="24sp"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:onClick="startFermentProcess"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stopButton_text"
                android:id="@+id/fermentStopBtn"
                android:onClick="stopFermentProcess"
                android:textSize="24sp"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionGroup="true"
            android:background="@drawable/grey_gradientsquare">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Prosessdata"
                android:id="@+id/progressData"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black" />
            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time_descr"
                android:id="@+id/startTimeLabel"
                android:textSize="24sp"
                android:layout_below="@+id/progressData"
                android:layout_toLeftOf="@+id/progressData"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/startTime"
                android:text="&lt;tid>"
                android:textSize="24sp"
                android:layout_alignBottom="@+id/startTimeLabel"
                android:layout_alignRight="@+id/updateButton"
                android:layout_alignEnd="@+id/updateButton" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentFermentTime"
                android:id="@+id/currentFermentTimeLabel"
                android:textSize="24sp"
                android:layout_below="@+id/startTimeLabel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/currentFermentTime"
                android:text="&lt;tid>"
                android:textSize="24sp"
                android:layout_below="@+id/startTime"
                android:layout_alignRight="@+id/updateButton"
                android:layout_alignEnd="@+id/updateButton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/currentHeatTempLabel"
                android:textSize="24sp"
                android:text="@string/currentTempLabel"
                android:layout_below="@+id/currentFermentTimeLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/currentFermentTemp"
                android:textSize="24sp"
                android:layout_alignTop="@+id/currentHeatTempLabel"
                android:layout_alignRight="@+id/updateButton"
                android:layout_alignEnd="@+id/updateButton"
                android:text="&lt;temp>" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/updateButton"
                android:src="@android:drawable/stat_notify_sync"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:onClick="getCurrentProsessData"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/currentHeatTempLabel"
                android:layout_toEndOf="@+id/currentHeatTempLabel" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
