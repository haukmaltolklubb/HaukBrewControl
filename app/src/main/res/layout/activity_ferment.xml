<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="no.gravem.hauk.haukbrewcontrol.Ferment"
    android:background="@drawable/beer4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GjÃ¦ring"
            android:id="@+id/fermentHeading"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set temp:"
                android:id="@+id/fermentTempLabel"
                android:longClickable="true"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_alignBottom="@+id/fermentTemp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:ems="3"
                android:id="@+id/fermentTemp"
                android:textSize="24sp"
                android:numeric="decimal"
                android:onClick="setFermentTemperature"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fermentTempLabel"
                android:layout_toEndOf="@+id/fermentTempLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/degreesCelciusLabel"
                android:id="@+id/degreesCelciusLabel"
                android:layout_toEndOf="@+id/fermentTemp"
                android:layout_toRightOf="@+id/fermentTemp"
                android:layout_alignBottom="@+id/fermentTempLabel"
                android:layout_alignTop="@+id/fermentTempLabel" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startButton_text"
                android:id="@+id/fermentStartBtn"
                android:textSize="24sp"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:onClick="startFermentProcess"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stopButton_text"
                android:id="@+id/fermentStopBtn"
                android:textSize="24sp"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:onClick="stopFermentProcess"
                android:layout_alignTop="@+id/fermentStartBtn"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="53dp"
                android:layout_marginEnd="53dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Prosessdata"
                android:id="@+id/progressData"
                android:textSize="24sp"
                android:layout_marginTop="42dp"
                android:layout_below="@+id/fermentStartBtn"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koketid"
                android:id="@+id/currentFermentTimeLabel"
                android:textSize="24sp"
                android:phoneNumber="true"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/progressData"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/currentFermentTime"
                android:text="&lt;tid>"
                android:layout_alignBottom="@+id/currentFermentTimeLabel"
                android:layout_alignRight="@+id/updateButton"
                android:layout_alignEnd="@+id/updateButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/currentFermentTempLabel"
                android:textSize="24sp"
                android:text="@string/currentTempLabel"
                android:layout_below="@+id/currentFermentTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/fermentTemp"
                android:layout_toStartOf="@+id/fermentTemp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/currentFermentTemp"
                android:layout_alignTop="@+id/currentFermentTempLabel"
                android:layout_alignRight="@+id/updateButton"
                android:layout_alignEnd="@+id/updateButton"
                android:text="&lt;temp>" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/updateButton"
                android:src="@android:drawable/stat_notify_sync"
                android:background="@drawable/sandrift_button"
                style="@style/btnStyleSandrift"
                android:layout_marginTop="38dp"
                android:layout_below="@+id/currentFermentTime"
                android:onClick="getCurrentProsessData"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
